{
  "compilerOptions": {
    "target": "es2022",
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "paths": {
      "@imaginary-ai/core": ["./packages/core/index.ts"],
      "@imaginary-ai/vite-plugin-co": ["./packages/vite-plugin-co/index.ts"],
    }
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/playground/**",
  ]
}
