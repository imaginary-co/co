{
  "compilerOptions": {
    "target": "es2022",
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/playground/**",
  ]
}
